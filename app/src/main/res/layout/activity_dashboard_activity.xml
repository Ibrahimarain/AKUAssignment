<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.summary.DashboardActivity"
    android:padding="10dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Total Male:"
                android:id="@+id/tv_male_count"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Total Female"
                android:id="@+id/tv_female_count"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:id="@+id/tv_married_count"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/tv_unmarried_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:id="@+id/tv_divorced_count"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:id="@+id/tv_widow_count"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:id="@+id/tv_count_sindh"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/redLight"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/tv_count_punjab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/redLight"
                android:textSize="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:id="@+id/tv_count_karachi"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/redLight"
                android:textSize="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Marital Count : "
                android:id="@+id/tv_count_lahore"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/redLight"
                android:textSize="16dp"

                />




        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>